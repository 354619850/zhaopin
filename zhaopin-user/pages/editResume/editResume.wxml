<view>
	<view class="box box-top _relative" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" bindtap='toUserInfo'>
		<view class="title">
			<view class="placeicon-1"></view>
			<text>基本信息</text>
		</view>
		<view>
			<view class='item'>
				<text >姓</text>
				<text style="margin-left:26px;">名 :</text>
				<text> {{userInfo.name}}</text>
			</view>
			<view class='item'>
				<text>性</text>
				<text style="margin-left:26px;">别 :</text>
				<text> {{userInfo.sex}}</text>
			</view>
			<view class='item'>
				<text>最高学历 :</text>
				<text> {{userInfo.degree}}</text>
			</view>
			<view class='item'>
				<text>所在城市 :</text>
				<text> {{userInfo.city}}</text>
			</view>
			<view class='item'>
				<text>联系电话 :</text>
				<text> {{userInfo.phone}}</text>
			</view>
			<view class='item'>
				<text>电子邮箱 :</text>
				<text> {{userInfo.email}}</text>
			</view>
			<view class='item'>
				<text>出生日期 :</text>
				<text> {{userInfo.birth}}</text>
			</view>
			<view class='imgbox'>
				<image mode="aspectFit" src="{{userInfo.avatarUrl || userInfoFromWX.avatarUrl }}" class="img"></image>
			</view>
		</view>
	</view>

