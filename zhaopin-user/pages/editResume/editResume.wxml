	<view>
		<view class="box {{resume.educations.length==0?box-top:datebox}}" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" bindtap="gotoPage" data-flag='true' data-url='education/education'>
			<view class="title">
				<view class="placeicon-1"></view>
				<text>教育经历</text>
			</view>
			<view wx:if="{{resume.educations.length>0}}" style="margin-top:15px;margin-left:15px;">
				<view class="item dateItem" wx:for="{{resume.educations}}">
					<view class="dateTop">{{item.graduation_year}}年毕业</view>
					<view class="text-2">{{item.school}}</view>
					<view class="text-3">{{item.degree}}~{{item.major}}</view>
				</view>
			</view>
		</view>
		<view class="add" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" wx:if="{{resume.educations.length==0}}" bindtap='gotoPage' data-flag='false' data-url='education/editEducation/editEducation'> 
			<view class="_inline-block iconfont icon-add"></view>
			<text>新增</text>
		</view>
	</view>

	<view>
		<view class="box {{resume.interships.length==0?box-top:datebox}}" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" bindtap='gotoPage' data-flag='true' data-url='intership/intership'>
			<view class="title">
				<view class="placeicon-1"></view>
				<text>实习经验</text>
			</view>
			<view wx:if="{{resume.interships.length>0}}" style="margin-top:15px;margin-left:15px;">
				<view class="item dateItem" wx:for="{{resume.interships}}">
					<view class="dateTop">{{item.start_date}}-{{item.end_date}}</view>
					<view class="text-2">{{item.company}}~{{item.job}}</view>
					<view class="text-3" wx:if='{{item.description}}'>{{item.description}}</view>
				</view>
			</view>
		</view>
		<view class="add" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" wx:if="{{resume.interships.length==0}}" data-flag='false' bindtap='gotoPage' data-url='intership/editIntership/editIntership'>
			<view class="_inline-block iconfont icon-add"></view>
			<text>新增</text>
		</view>
	</view>

	<view>
		<view class="box {{resume.projects.length==0?box-top:datebox}}" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" bindtap='gotoPage' data-flag='true' data-url='project/project'>
			<view class="title">
				<view class="placeicon-1"></view>
				<text>项目经验</text>
			</view>
			<view wx:if="{{resume.projects.length>0}}" style="margin-top:15px;margin-left:15px;">
				<view class="item dateItem" wx:for="{{resume.projects}}">
					<view class="dateTop">{{item.start_date}}-{{item.end_date}}</view>
					<view class="text-2">[项目名称] {{item.name}}</view>
					<view class="text-2">[项目职责] {{item.duty}}</view>
					<view class="text-3" wx:if='{{item.description}}'>{{item.description}}</view>
				</view>
			</view>
		</view>
		<view class="add" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view"  wx:if="{{resume.projects.length==0}}" data-flag='false' bindtap='gotoPage' data-url='project/editProject/editProject'>
			<view class="_inline-block iconfont icon-add"></view>
			<text>新增</text>
		</view>
	</view>

	<view>
		<view class="box {{resume.honors.length==0?box-top:datebox}}" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" bindtap='gotoPage' data-flag='true' data-url='honor/honor'>
			<view class="title">
				<view class="placeicon-1"></view>
				<text>荣誉奖项</text>
			</view>
			<view wx:if="{{resume.honors.length>0}}" style="margin-top:15px;margin-left:15px;">
				<view class="item dateItem" wx:for="{{resume.honors}}">
					<view class="dateTop">{{item.date}}</view>
					<view class="text-2">{{item.prize}}</view>
					<view class="text-3">{{item.name}}</view>
				</view>
			</view>
		</view>
		<view class="add" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" wx:if="{{resume.honors.length==0}}" data-flag='false' bindtap='gotoPage' data-url='honor/editHonor/editHonor'>
			<view class="_inline-block iconfont icon-add"></view>
			<text>新增</text>
		</view>
	</view>

	<view class="box" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" data-msg='{{resume.selfAssessment}}' bindtap='toSelfAssessment'>
		<view class="title">
			<view class="placeicon-1"></view>
			<text>自我评价</text>
		</view>
		<view wx:if='{{resume.selfAssessment}}'>
			<view class="item" >
				<view class="text-4">{{resume.selfAssessment}}</view>
			</view>
		</view>
	</view>
	<view class="add" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" wx:if='{{!resume.selfAssessment}}' data-msg='' bindtap='toSelfAssessment'>
		<view class="_inline-block iconfont icon-add"></view>
		<text>新增</text>
	</view>

	<view class="box" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" bindtap='toHope'>
		<view class="title">
			<view class="placeicon-1"></view>
			<text>求职意向</text>
		</view>
		<view wx:if='{{resume.hope}}'>
			<view class="item" >
				<view class="text-2">{{resume.hope.name}}</view>
				<view class="text-2" style="font-size:13px; margin-top:4px;">{{resume.hope.type}}~{{resume.hope.city}}~{{resume.hope.salaryRange}}</view>
				<view class="text-3" wx:if='{{resume.hope.otherDescription}}'>{{resume.hope.otherDescription}}</view>
			</view>
		</view>
	</view>
	<view class="add" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" wx:if='{{!resume.hope}}' bindtap='toHope'>
		<view class="_inline-block iconfont icon-add"></view>
		<text>新增</text>
	</view>

	<view class="handle">
		<view class="handle-btn preview" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view">
			<view class="_inline-block iconfont icon-preview"></view>
			<text>预览</text>
		</view>
		<!-- <view class="handle-btn" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view">
			<view class='_inline-block iconfont icon-save save'></view>
			<text>保存</text>
		</view> -->
	</view>

	<view class='box footer'></view>
</view>