
page{
	min-height:100%;
	background-color:rgb(239,239,244);
	padding-top: 48px;
	box-sizing:border-box;
}

view{
	font-size:15px;
}

.searchBar{
	width: 100%;
	top:0;
	height:48px;
}

.search{
	background:rgb(239,239,244);
	padding:0 30rpx;
	border-radius:30px;
	flex-grow: 1;
}

.search-input{
	display: inline-block;
	margin-left:10rpx;
	color:#353535;
	/*width:360rpx;*/
	min-width: 250rpx;
	max-width:320rpx;
	padding:5px 0;
	vertical-align: middle;
	font-size:15px;

}

.work-place{
	padding-right:12rpx;
}

.work-place text{
	overflow: hidden;
 	text-overflow: ellipsis;
 	white-space: nowrap;
	max-width: 60px;
	display: inline-block;
}


.work-place text,.handleItem text{
	vertical-align: baseline;
	margin-right:8rpx;
	color:#353535;
}

.canclebox{
	padding-left: 12rpx;
}

.cancle{
	padding-left:15rpx;
	padding-right:15rpx;
	line-height:2;
	font-size:15px;
	color:#353535;
}

.search-history,.search-hot{
	margin-top:20rpx;
}

.history-list,.hot-list{
	font-size:13px;
	margin-top:20rpx;
	margin-left:-10px;
}

.history-item,.hot-item{
	display: inline-block;
	padding-left:15rpx;
	padding-right:15rpx;
	line-height:2.2;
	font-size:13px;
	color:#353535;
	margin-bottom:7px;
	margin-left:10px;
}

.handle{
	color:#09bb07;
	font-size:13px;
	float:right;
}
.searchComplement{
	background: #ffffff;
	box-sizing: border-box;
	
}

.complement-item{
	box-sizing: border-box;
	padding:0 34rpx;
}

._line{
	padding: 26rpx 0;
	/*width:100%;*/
	border-bottom: 1rpx solid rgb(239,239,244);
}

.complement-item icon{
	margin-right:40rpx;
}

.complement-item text{
	vertical-align: baseline;
}

.handleBar{
	background: #fff;
	width: 100%;
	border-top:1rpx solid rgb(239,239,244);
	border-bottom:1rpx solid rgb(239,239,244);
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
	padding:0 80rpx;
	height: 38px;
}

.handleItem{
	font-size: 14px;
	line-height:38px;
}

.handleArea{
	position: relative;
	margin-top:38px;
	overflow: hidden;
	background: #fff;
}

.itemArea{
	/*height:300px;*/
	background:#fff;
	/*transform:translateY(-300px);*/
	top:-400px;
	position: absolute;
	width:100%;
}

.itemArea-1{
	height:265px;
}
.itemArea .leftArea{
	height:100%;
	float:left;
	width:30%;
	background:rgb(239,239,244);
	display: flex;
	flex-direction: column;
	align-content: center;
	justify-content: center;
}

.itemArea .rightArea{
	height:100%;
	float:right;
	width:70%;
	padding:0 100rpx;
	box-sizing: border-box;
}

.cidx-text{
	font-size: 14px;
	text-align: center;
	display: block;
	line-height: 40px;
	height: 40px;
}

.changeCity{
	height:35px;
	line-height: 35px;
	color:#888888;
	box-sizing: border-box;
	text-align: center;
	background: #ffffff;
}

.icon-change{
	vertical-align: baseline;
	margin-right: 10px;
}

.changeCity text{
	color:#353535;
	vertical-align: baseline;
}

.itemArea-2,.itemArea-3{
	padding:0 30rpx 15px 30rpx;
	box-sizing: border-box;
	overflow-y: auto;
}

.itemArea-2 text,.itemArea-3 text{
	font-size: 13px;
	width: 100rpx;
}

.itemArea-2 slider{
	margin: 5px 40rpx;
	width:510rpx;
	display: inline-block;
}

.itemArea-2 .wx-slider-handle{
	width: 24px;
	height: 24px;
}

.itemArea-2 .title,.itemArea-3 .title{
	color:#000;
	font-size:15px;
}

.itemArea-item{
	margin-top:7px;
}

.itemArea .btn-view{
	margin-top:7px;
	margin-left:-10px;
}

.lxCheckboxGroup view{
	display: inline-block;
	margin-left: 10px;
}

/*.checkbox-item{
	width: 85px;
}*/

.circle{
	background:#F8F8F8;
	border-radius:4px;
	padding:0px 15rpx;
	box-sizing: border-box;
	height: 30px;
	line-height: 30px;
	border:1px solid rgba(0, 0, 0, 0.2);
	margin-bottom:7px;
	font-size: 13px;
}

.success_circle{
	background:rgb(200,200,200);
	border-radius:4px;
	padding:0px 15rpx;
	box-sizing: border-box;
	height: 30px;
	line-height: 30px;
	border:1px solid rgba(0, 0, 0, 0.2);
	color: #fff;
	margin-bottom:7px;
	font-size: 13px;
}