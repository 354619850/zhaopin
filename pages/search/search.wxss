page{
	min-height:100%;
	background-color:rgb(239,239,244);
}

view{
	font-size:15px;
}

.search{
	background:rgb(239,239,244);
	padding:0 30rpx;
	border-radius:40rpx;
}

.search-input{
	display: inline-block;
	margin-left:10rpx;
	color:#353535;
	width:360rpx;
	padding:16rpx 0;
	vertical-align: middle;
}

.work-place text{
	vertical-align: middle;
	margin-right:8rpx;
	color:#353535;
}

.cancle{
	padding-left:15rpx;
	padding-right:15rpx;
	line-height:2.2;
	font-size:15px;
	color:#353535;
}

.search-history,.search-hot{
	margin-top:20rpx;
}

.history-list,.hot-list{
	font-size:13px;
	margin-top:20rpx;
	margin-left:-10px;
}

.history-item,.hot-item{
	display: inline-block;
	padding-left:15rpx;
	padding-right:15rpx;
	line-height:2.2;
	font-size:13px;
	color:#353535;
	margin-bottom:7px;
	margin-left:10px;
}

.handle{
	color:#09bb07;
	font-size:13px;
	float:right;
}