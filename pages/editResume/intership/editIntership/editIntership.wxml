<view class="box">
	<view class="item _flex">
		<view class="iconfont icon-circle-edit"></view>
		<input class="input" value="{{intership.campany}}" placeholder="公司名称" placeholder-class="placeholder-class" />
	</view>
	<view class="item _flex">
		<view class="iconfont icon-circle-edit"></view>
		<input class="input" value="{{intership.job}}" placeholder="你的职位" placeholder-class="placeholder-class" />
	</view>
	<picker bindchange="bindStartPickerChange" value="{{intership.startDate}}" mode="date" start="2000-01-01" end="{{now}}" fields='month'>
		<view class="item _flex" style="margin-top:20px">
			<view class="iconfont icon-circle-edit"></view>
			<view class="input" wx:if="{{intership.startDate}}">{{intership.startDate}}入职</view>
			<view class="input placeholder-class" wx:else>入职时间</view>
		</view>
	</picker>
	<view class="item _flex">
		<view class="iconfont icon-circle-edit"></view>
		<picker bindchange="bindEndPickerChange" value="{{intership.endDate}}" mode="date" star="2000-01-01" end="{{now}}" fields='month' style="flex-grow:1">
			<view class="input" wx:if="{{intership.endDate&&!checked}}">{{intership.endDate}}离职</view>
			<view class="input" wx:if="{{intership.endDate&&checked}}">{{intership.endDate}}</view>
			<view class="input placeholder-class" wx:if="{{!intership.endDate}}">离职时间</view>
		</picker>
		<view class="present" bindtap='changeChecked' wx:if='{{!checked}}'>
			<icon type="{{checked?'success_circle':'circle'}}" size="20" style='height:24px;margin-right:5px;'/>
			<text>至今</text>
		</view>
	</view>
	<view class="item _flex" style="margin-top:20px">
		<view class="iconfont icon-circle-edit"></view>
		<view class="input" style="color:#888888">工作内容</view>
	</view>
	<textarea value='{{intership.description}}' maxlength="{{maxlength}}" class="_textarea" bindinput='textareaInput'></textarea>
	<view class="hint">{{intership.description.length}}/{{maxlength}}</view>
	<button type="primary" class='btn' bindtap="save">保存修改</button>
	<button type="default" class='btn' style='margin-top:15px;margin-bottom: 15px;' bindtap='delete'>删除此教育经历</button>
</view>