<view class="box">
	<view class="item _flex">
		<view class="iconfont icon-circle-edit"></view>
		<input class="input" value="{{education.school}}" placeholder="学校" placeholder-class="placeholder-class" />
	</view>
	<view class="item _flex">
		<view class="iconfont icon-circle-edit"></view>
		<input class="input" value="{{education.major}}" placeholder="专业" placeholder-class="placeholder-class" />
	</view>
	<picker bindchange="bindYearPickerChange" value="{{yearIndex}}" range="{{years}}">
		<view class="item _flex" style="margin-top:20px">
			<view class="iconfont icon-circle-edit"></view>
			<view class="input" wx:if="{{education.endDate}}">{{education.endDate}}年毕业</view>
			<view class="placeholder-class" wx:else>毕业年份</view>
		</view>
	</picker>
	<picker bindchange="bindDegreePickerChange" value="{{degreeIndex}}" range="{{degrees}}">
		<view class="item _flex">
			<view class="iconfont icon-circle-edit"></view>
			<view class="input" wx:if="{{education.degree}}">{{education.degree}}</view>
			<view class="placeholder-class" wx:else>学位</view>
		</view>
	</picker>
	<button type="primary" class='btn' bindtap="save">保存修改</button>
	<button type="default" class='btn' style='margin-top:15px;' bindtap='delete'>删除此教育经历</button>
</view>