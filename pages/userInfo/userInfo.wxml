<view class="_relative" style="height:100%;">
	<view class="box-top" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view">
		<view class="item">
			<image mode="aspectFit" src="{{userInfoFromWX.avatarUrl }}" class="img"></image>
		</view>
		
	</view>
	<view class="box">
		<view class="item">
			<view style="border-bottom:1rpx solid rgb(239,239,244)">
				<icon class='iconfont icon-circle-edit'></icon>
				<input value="{{userInfo.name}}" placeholder="姓名" placeholder-class="placeholder-class" />
			</view>
		</view>
		<view class="item">
			<view style="border-bottom:1rpx solid rgb(239,239,244)">
				<icon class='iconfont icon-circle-edit'></icon>
				<input value="{{userInfo.sex}}" placeholder="性别" placeholder-class="placeholder-class" />
			</view>
		</view>
		<view class="item">
			<view style="border-bottom:1rpx solid rgb(239,239,244)">
				<icon class='iconfont icon-circle-edit'></icon>
				<input value="{{userInfo.birth}}" placeholder="出生年月" placeholder-class="placeholder-class" />
			</view>
		</view>
	</view>

	<view class='box'>
		<view class="item">
			<view style="border-bottom:1rpx solid rgb(239,239,244)">
				<icon class='iconfont icon-circle-edit'></icon>
				<input value="{{userInfo.phone}}" placeholder="手机号" placeholder-class="placeholder-class" />
			</view>
		</view>
		<view class="item">
			<view style="border-bottom:1rpx solid rgb(239,239,244)">
				<icon class='iconfont icon-circle-edit'></icon>
				<input value="{{userInfo.email}}" placeholder="邮箱" placeholder-class="placeholder-class" />
			</view>
		</view>
	</view>

	<view class="footer box" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view">
		<view class='item'>
			<icon class="iconfont icon-baocun"></icon>
			<text>保存</text>
		</view>
	</view>
</view>
