page{
	background-color:rgb(239,239,244);
	box-sizing:border-box;
}

.box,.box-top{
	margin-top:20px;
	background: #fff;
	box-sizing: border-box;
}

.box-top{
	padding:10px 30rpx;
}
.img{
	width: 60px;
	height: 60px;
	vertical-align: middle;
	margin-right: 10px;
}

.iconfont{
	color:#353535;
	vertical-align: baseline;
	margin-right: 7px;
}

.box .item{
	height: 40px;
	box-sizing: border-box;
	padding:0px 30rpx;
}

.box .item text{
	line-height: 40px;
}

.box .item .iconfont{
	line-height: 40px;
}
