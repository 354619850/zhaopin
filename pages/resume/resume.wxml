<view>
	<view class="box">
		<view class="item" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" bindtap='toEditResume' data-flag="true" data-index="{{index}}" wx:for="{{resumes}}">
			<view style="border-bottom:1rpx solid rgb(239,239,244)">
				<text>{{item.name}}</text>
				<icon class="iconfont icon-right"></icon>
			</view>
		</view>	
	</view>
	<view class='box'>
		<picker bindchange="bindPickerChange" range="Object Array" range-key="name" value="{{index}}" range="{{resumes}}">
			<view class="item" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" bindtap='setDefaultResume'>
				<text>默认投递简历</text>
				<icon class="iconfont icon-right"></icon>
				<text class="default-resume-text">{{resumes[index].name}}</text>
			</view>
		</picker>
	</view>
	<view class='box'>
		<view class="item" hover="true" hover-start-time="10" hover-stay-time="300" hover-class="click-view" bindtap='toEditResume' data-flag="false">
			<text>新建简历</text>
			<icon class="iconfont icon-right"></icon>
		</view>
	</view>
</view>


