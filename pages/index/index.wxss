/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa
}

.usermotto {
  margin-top: 200px;
}

.search{
/*	margin-top: 20rpx;*/
	padding:20rpx 0;
	/*background:rgba(0,0,255,0.2);*/
	background:rgba(178,178,178,0.6);
	width:100%;
	display: flex;
	align-items: center;
	flex-direction: column;
	position: fixed;
	
}

.search-box{
	color:rgba(255,255,255,0.8);
	text-align: center;
	/*background:rgba(0,0,255,0.2);*/
	background:rgba(136,136,136,0.4);
	border-radius:30rpx;
	width:600rpx;
	padding:16rpx 0;
}

.list{
	width:100%;
}

.item{
	width:100%;
	padding:25rpx 25rpx 0 25rpx;
	box-sizing: border-box;
}

.logo{
	float:left;
	width:175rpx;
	/*background:rgba(0,0,0,0.1);*/
	display: flex;
	align-items: flex-start;
	justify-content: center;
	height:100%;
}

.details{
	float:left;
	width:525rpx;
	height:100%;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid rgba(50,40,50,0.1);
}

.job-title{
	font-weight:700;
	font-size: 30rpx;
	float:left;
}

.job-salary{
	font-weight:700;
	color:#ff9a00;
	font-weight:600;
	float:right;
}

.company-name{
	color:#353535;
}

.translucence-msg{
	color: #888888;
}

.work-place{

}

.internship,.degree,.company-type{
	margin-left:15rpx;
}

.release-date{
	color:#b2b2b2;
}