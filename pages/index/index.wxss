page{
	background: #fff;
}

.header{
	height:43px;
	width: 100%;
	z-index:11;
	background:#fff;
	box-shadow: 0 2px 4px #aaa;
}

.header .iconfont{
	line-height: 43px;
	margin:0px 15px;
}

.search-box{
	flex-grow: 1;
	text-align: center;
	background:rgb(239,239,244);
	margin:6px 0px;
	border-radius: 16px;
}

.search-box .icon-search{
	line-height: 31px;
	margin-right: 30rpx;
	color:#888888;
}
.search{
	display: inline-block;
	line-height: 31px;
	color:#888888;
}
.list{
	width:100%;
}

.item{
	width:100%;
	padding:25rpx 25rpx 0 25rpx;
	box-sizing: border-box;
	background:#fff;
}

.logo{
	float:left;
	width:175rpx;
	/*background:rgba(0,0,0,0.1);*/
	display: flex;
	align-items: flex-start;
	justify-content: center;
	height:100%;
}

.details{
	float:left;
	width:525rpx;
	height:100%;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid rgba(50,40,50,0.1);
}

.job-title{
	font-weight:700;
	font-size: 30rpx;
	float:left;
}

.job-salary{
	font-weight:700;
	color:#ff9a00;
	font-weight:600;
	float:right;
}

.company-name{
	color:#353535;
}

.translucence-msg{
	color: #888888;
}

.work-place{

}

.internship,.degree,.company-type{
	margin-left:15rpx;
}

.release-date{
	color:#b2b2b2;
}

.mpage {
  z-index: 10;
  background: #fff;
  position: absolute;
}

.shadow{
	position:fixed;
	z-index:20;
	height:100%;
	background:#000;
}
.withAnimate {
  transition: all 300ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
}

.user {
  position: fixed;
  height:100%;
  left: 0;
  background-color: #fff;
  box-sizing: border-box;
}

.user .user-box {
	height:100%;
  	background: cadetblue;
}